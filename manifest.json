{
  "manifest_version": 3,
  "name": "DeepSeek RTL",
  "version": "1.0",
  "description": "Automatically aligns text for right-to-left languages on DeepSeek Chat.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rtl-handler.js.js"],
      "run_at": "document_end"
    }
  ]
}
